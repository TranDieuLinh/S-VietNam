<% provide(:title, "Log in") %>
<!DOCTYPE html>
<html >
<head>
  <meta charset="UTF-8">
  <title>Login/Logout animation concept</title>
  <meta name="viewport" content="width=device-width, initial-scale=1, user-scalable=yes">
  
  <link rel='stylesheet prefetch' href='http://fonts.googleapis.com/css?family=Open+Sans'>

      <link rel="stylesheet" href="css/style.css">

  
</head>

<body>
  <div class="cont">
  <div class="demo">

    <form class="login" accept-charset="UTF-8" action="/login" method="post">

      <%= form_for(:session, url: login_path) do |f| %>
        <div class="login">
      <div class="login__check"></div>
      <div class="login__form">

        <div class="login__row">
          <svg class="login__icon name svg-icon" viewBox="0 0 20 20">
            <path d="M0,20 a10,8 0 0,1 20,0z M10,0 a4,4 0 0,1 0,8 a4,4 0 0,1 0,-8" />
          </svg>
          <input type="text" class="login__input email" placeholder="Email" id="session_email"
         name="session[email]"/>
        </div>

        
        <div class="login__row">
          <svg class="login__icon pass svg-icon" viewBox="0 0 20 20">
            <path d="M0,20 20,20 20,8 0,8z M10,13 10,16z M4,8 a6,8 0 0,1 12,0" />
          </svg>
          <input type="password" class="login__input pass" placeholder="Password" id="session_password" name="session[password]"/>
        </div>

        <button type="submit" class="login__submit" name="commit" 
       value="Log in">Sign in</button>

        <p class="login__signup">Don't have an account? &nbsp;<a href="/signup">Sign up</a></p>

      </div>
      </div>
      <% end %>
      
      
  </form>

  </div>
  </div>
</body>
</html>
